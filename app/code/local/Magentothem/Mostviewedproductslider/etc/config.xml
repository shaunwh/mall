        <models>
            <mostviewedproductslider>
                <class>Magentothem_Mostviewedproductslider_Model</class>
                <resourceModel>mostviewedproductslider_mysql4</resourceModel>
            </mostviewedproductslider>
            <mostviewedproductslider_mysql4>
                <class>Magentothem_Mostviewedproductslider_Model_Mysql4</class>
                <entities>
                    <mostviewedproductslider>
                        <table>mostviewedproductslider</table>
                    </mostviewedproductslider>
                </entities>
            </mostviewedproductslider_mysql4>
        </models>
        <resources>
            <mostviewedproductslider_setup>
                <setup>
                    <module>Magentothem_Mostviewedproductslider</module>
                </setup>
