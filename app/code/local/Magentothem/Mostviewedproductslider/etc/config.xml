                    <use>core_setup</use>
                </connection>
            </mostviewedproductslider_setup>
            <mostviewedproductslider_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </mostviewedproductslider_write>
            <mostviewedproductslider_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </mostviewedproductslider_read>
